<templateSet group="Zen HTML">
  <template name="form:g" value="&lt;form action=&quot;$VAR0$&quot; method=&quot;get&quot;&gt; {{ csrf_field() }}&#10;    $END$&#10;&lt;/form&gt;" description="&lt;form action=&quot;...&quot; method=&quot;get&quot;&gt;...&lt;/form&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="VAR0" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
    </context>
  </template>
  <template name="form:p" value="&lt;form action=&quot;$VAR0$&quot; method=&quot;post&quot;&gt; {{ csrf_field() }}&#10;    $END$&#10;&lt;/form&gt;" description="&lt;form action=&quot;...&quot; method=&quot;post&quot;&gt;...&lt;/form&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="VAR0" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
    </context>
  </template>
  <template name="div:fg" value="&lt;div class=&quot;form-group{{ $errors-&gt;has('$ID$') ? ' has-error' : '' }}&quot;&gt;&#10;    &lt;label for=&quot;$ID$&quot; class=&quot;control-label&quot;&gt;$LABEL$&lt;/label&gt;&#10;&#10;    &lt;div&gt;&#10;        &lt;input id=&quot;$ID$&quot; type=&quot;$TYPE$&quot; class=&quot;form-control&quot; name=&quot;$NAME$&quot; value=&quot;{{ old('$ID$') }}&quot; $REQUIRED$ $AUTOFOCUS$&gt;&#10;&#10;        @if ($errors-&gt;has('$ID$'))&#10;            &lt;span class=&quot;help-block&quot;&gt;&#10;                &lt;strong&gt;{{ $errors-&gt;first('$ID$') }}&lt;/strong&gt;&#10;            &lt;/span&gt;&#10;        @endif&#10;    &lt;/div&gt;&#10;&lt;/div&gt;" description="&lt;div class=&quot;form-group&quot;&gt;" toReformat="false" toShortenFQNames="true">
    <variable name="ID" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="LABEL" expression="capitalize(spaceSeparated(ID))" defaultValue="" alwaysStopAt="true" />
    <variable name="TYPE" expression="" defaultValue="&quot;text&quot;" alwaysStopAt="true" />
    <variable name="NAME" expression="underscoreSeparated(ID)" defaultValue="" alwaysStopAt="true" />
    <variable name="REQUIRED" expression="" defaultValue="&quot;required&quot;" alwaysStopAt="true" />
    <variable name="AUTOFOCUS" expression="" defaultValue="&quot;autofocus&quot;" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="div:fgb" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;button type=&quot;submit&quot; class=&quot;btn btn-$BTN_TYPE$&quot;&gt;&#10;        $BTN_TEXT$&#10;    &lt;/button&gt;&#10;&lt;/div&gt;&#10;" description="button form group" toReformat="false" toShortenFQNames="true">
    <variable name="BTN_TYPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="BTN_TEXT" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="card" value="&lt;div class=&quot;card&quot;&gt;&#10;    &lt;div class=&quot;card-header&quot;&gt;$HEAD$&lt;/div&gt;&#10;    &lt;div class=&quot;card-body&quot;&gt;$BODY$&lt;/div&gt;&#10;&lt;/div&gt;" description="bootstrap card template" toReformat="false" toShortenFQNames="true">
    <variable name="HEAD" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="BODY" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="a" value="&lt;a href=&quot;$link$&quot;&gt;$text$&lt;/a&gt;" description="&lt;a href=&quot;https://example.com&quot;&gt;" toReformat="false" toShortenFQNames="true">
    <variable name="link" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="text" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="JSP" value="true" />
    </context>
  </template>
</templateSet>